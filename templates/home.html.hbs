<!DOCTYPE html>
<html lang="de">
<head>
    {{> partials/head }}
    <title>faculty bot</title>
</head>
<body class="bg-[#2c2f33] text-gray-200 flex items-center justify-center min-h-screen">

    <!-- blurred, translucent background -->
    <div class="max-w-xl w-full p-6 shadow-lg rounded-2xl border border-[#2c2f33] text-center bg-[#23272a] bg-opacity-90 backdrop-blur-lg">
        <!-- header -->
        <div class="text-6xl text-[#9b59b6] mb-4 hover:animate-pulse">
            <i class="fas fa-cogs"></i>
        </div>
        <div class="mt-4 flex items-center justify-center gap-2">
            <h1 class="text-4xl font-bold text-white">faculty manager Dashboard</h1>
        </div>

        <!-- version info -->
        <p class="text-sm text-gray-400 mt-2">
            version: 0.1.0
        </p>

        

        <!-- authentication and login actions -->
                <div class="mt-8 space-y-6">
            {{#if is_logged_in}}
                <div class="flex items-center justify-center gap-2 text-emerald-400">
                    <i class="fas fa-check-circle"></i>
                    <span class="text-sm">
                        You are authenticated. Welcome back!
                    </span>
                </div>
                <a href="/logout" class="block w-full py-3 px-6 bg-gradient-to-r from-red-500/30 to-rose-600/30 hover:from-red-500/40 hover:to-rose-600/40 text-red-200 rounded-xl border border-red-500/30 flex items-center justify-center gap-2 transition-all duration-200 hover:scale-[1.02]">
                    <i class="fas fa-sign-out-alt"></i>
                    Log Out
                </a>
            {{else}}
                <div class="flex items-center justify-center gap-2 text-rose-400">
                    <i class="fas fa-exclamation-circle"></i>
                    <span class="text-sm">
                        Seems like you're not authenticated. Please log in.
                    </span>
                </div>
                <a href="/api/auth/discord" 
                class="block w-full py-3 px-6 bg-gradient-to-r from-purple-500/30 to-blue-600/30 hover:from-purple-500/40 hover:to-blue-600/40 text-purple-200 rounded-xl border border-purple-500/30 flex items-center justify-center gap-2 transition-all duration-200 hover:scale-[1.02]">
                    <i class="fab fa-discord"></i>
                    Discord Login
                </a>
            {{/if}}
        </div>

        <!-- collapsible info -->
        

        <!-- navigation section -->
        <p class="text-sm text-gray-400 uppercase font-semibold tracking-wider mt-8 mb-4">
            quick actions
        </p>
        <hr class="border-[#9b59b6] w-1/2 mx-auto mb-4">
        <div class="grid grid-cols-2 gap-4">
            <a href="/verify" class="bg-gray-700 hover:bg-gray-600 text-white text-sm px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
                <i class="fas fa-check-circle mr-2"></i> verify
            </a>
            <a href="/reverify" class="bg-gray-700 hover:bg-gray-600 text-white text-sm px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
                <i class="fas fa-sync mr-2"></i> reverify
            </a>
            <a disabled href="#" class="bg-gray-700 text-gray-500 text-sm px-4 py-2 rounded-lg shadow-md cursor-not-allowed flex items-center justify-center gap-2">
                <i class="fas fa-exchange-alt mr-2"></i> switch account
                <span class="bg-[#9b59b6] text-white text-xs px-2 py-1 rounded-full ml-2">soon</span>
            </a>
            <!-- admin panel -->
            {{#if is_admin}}
                <a href="/admin" class="bg-gray-700 hover:bg-gray-600 text-white text-sm px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
                    <i class="fas fa-user-shield mr-2"></i> admin panel
                </a>
                <a href="/settings" class="bg-gray-700 hover:bg-gray-600 text-white text-sm px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
                    <i class="fas fa-cog mr-2"></i> settings
                </a>
                <a href="/management-console" class="bg-gray-700 hover:bg-gray-600 text-white text-sm px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105">
                    <i class="fas fa-terminal mr-2"></i> management console
                </a>
            {{/if}}
            <!-- end admin panel -->


        </div>

        <p class="text-sm text-gray-400 uppercase font-semibold tracking-wider mt-8 mb-4">
            resources
        </p>
        <div class="flex items-center justify-center gap-4">
             <a href="https://github.com/rndrmu/faculty-bot" target="_blank" class="text-sm text-gray-400 hover:text-gray-200 transition">
                <i class="fab fa-github mr-2"></i> contribute on github
            </a>
             <a href="/setup" class="text-sm text-gray-400 hover:text-gray-200 transition">
                <i class="fas fa-info-circle mr-2"></i> setup guide
            </a>
           
            <a href="https://x.com/rndrmu" target="_blank" class="text-sm text-gray-400 hover:text-gray-200 transition">
                <i class="fab fa-x-twitter mr-2"></i> twitter
            </a>
            <a href="https://rndrmu.moe" target="_blank" class="text-sm text-gray-400 hover:text-gray-200 transition">
                <i class="fas fa-globe mr-2"></i> blog
            </a>
            <a href="https://rndrmu.bsky.social" target="_blank" class="text-sm text-gray-400 hover:text-gray-200 transition">
                <i class="fab fa-bluesky mr-2"></i> bluesky
            </a>
           
        </div>

            <hr class="border-[#9b59b6] w-1/2 mx-auto my-8">
    <div class="mt-6" x-data="{ open: false }">
            <button @click="open = !open" class="text-sm text-gray-300 hover:text-[#ff0077] transition duration-200 transform hover:rotate-3 focus:outline-none">
                <i class="fas fa-info-circle mr-2"></i> life-changing information
            </button>
            <div x-show="open" class="mt-2 text-gray-300 text-center transition-transform transform duration-300">
                <p class="italic text-sm">
                    bocchi the rock. give it a watch! NOW <i class="fas fa-heart text-[#ff0077]"></i> <br />
                    <a href="https://myanimelist.net/anime/47917/Bocchi_the_Rock" target="_blank" class="text-[#ff0077] hover:text-[#ffcc00] transition duration-200 font-bold">
                        dive in 
                        <i class="fas fa-external-link-alt ml-1"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>



</body>
</html>

<style>
/* smooth background transition */
@keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

body {
    background: linear-gradient(45deg, 
         #f093fb, #6fa3ef, #bc76e3, #f093fb
    );
    
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
}
</style>
